@using Data_Access_Layer.Models
 
@model passwords; 


@{

    var name             = Model.Name;
    var URL              = Model.URL;
    var Password         = Model.PassWord;
   
}
 

<form asp-action="UpdatePassword" method="post"   >


    <div class="form-group  mt-1 ">

        <label asp-for="Name" class="form-label">Name :</label>
        <input Id="Name" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-primary"></span>

    </div>

    <div class="form-group  mt-1 ">

        <label asp-for="URL" class="form-label">URL :</label>
        <input Id="URL" asp-for="URL" class="form-control" />
        <span asp-validation-for="URL" class="text-primary"></span>

    </div>





    <div class="form-group  mt-1 ">

        <label asp-for="PassWord" class="form-label">Password :</label>
        <input Id="PassWord" asp-for="PassWord" class="form-control" />
        <span asp-validation-for="PassWord" class="text-primary"></span>

    </div>

    <div class="form-group  mt-1 ">

        <label class="form-label">Your password strength :</label>
        <span style="background-color:lightgray" class="form-control" Id="PasswordStrengthValidation"> Writ your password </span>

    </div>

    <div class="form-group row mt-4 mb-4">

        <div class="col row">

            <div class="form-group col row">

                <div class="col  ">

                    <button type="submit" class="btn btn-success custom-button  ">Update your data</button>

                </div>

                <div class="col  ">
                    <button type="button" id="passwordGenerator" class="btn   btn-info custom-button ">Generate a password </button>
                </div>
            </div>

            <div class="col">
            </div>

        </div>

    </div>

</form>


 
